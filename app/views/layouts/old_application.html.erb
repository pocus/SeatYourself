<!DOCTYPE html>
<html>
<head>
  <title>SeatYoSelf</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
<p>
	<% if current_user %>
		<%= link_to "log out", session_path("foo"), :method => :delete %>
	<% else %>
		<%= link_to "log in", new_session_path %> | <%= link_to "sign up", new_user_path %>
	<% end %> | <%= link_to "reservation index", reservations_path %>
	</p>



<div class ="flash" >
	<% if flash[:notice] %>
		<p id ="notice"><%= flash[:notice] %></p>
	<% end %>

	<% if flash[:alert] %>
		<p id ="alert"> <%= flash[:alert] %></p>
	<% end %>
</div>

<%= yield %>

</body>
</html>
